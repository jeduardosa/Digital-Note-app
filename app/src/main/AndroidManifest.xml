<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.DigitalNoteApp.LIGHT"
        tools:targetApi="31">
         <activity
            android:name=".view.CreateNoteActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_details_note"
            android:theme="@style/Theme.DigitalNoteApp.LIGHT" />
        <activity
            android:name=".view.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.DigitalNoteApp.LIGHT">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DigitalNoteApp.LIGHT"
            />
    </application>

</manifest>